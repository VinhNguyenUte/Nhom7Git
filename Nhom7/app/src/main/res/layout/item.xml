<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Thương hiệu và tên xe -->
            <TextView
                android:id="@+id/carBrandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Honda Civic"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Mô tả xe -->
            <TextView
                android:id="@+id/carDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A great car in good condition"
                android:textSize="14sp"
                android:paddingTop="5dp" />

            <!-- Giá xe -->
            <TextView
                android:id="@+id/carPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$15,000"
                android:textSize="14sp"
                android:textColor="@android:color/holo_green_dark"
                android:paddingTop="5dp" />

            <!-- Trạng thái duyệt -->
            <TextView
                android:id="@+id/carStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textSize="14sp"
                android:textColor="@android:color/holo_orange_dark"
                android:paddingTop="5dp" />

            <!-- Thời gian đăng -->
            <TextView
                android:id="@+id/carCreatedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created At: 2024-11-24"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:paddingTop="5dp" />


        </LinearLayout>

        <!-- Hình ảnh xe -->
        <ImageView
            android:id="@+id/imageCar"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <!-- Nút Duyệt -->
        <Button
            android:id="@+id/btnApprove"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Duyệt"
            android:background="#00FF0B"
            android:textColor="@android:color/white"
            android:layout_marginEnd="5dp"/>

        <!-- Nút Từ chối -->
        <Button
            android:id="@+id/btnReject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Từ chối duyệt"
            android:background="#FF0000"
            android:textColor="@android:color/white"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
</LinearLayout>
